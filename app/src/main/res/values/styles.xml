<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NormalButton" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/margin_ideal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ShadedButton" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/margin_ideal</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="OrangeButton" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/margin_ideal</item>
        <item name="android:background">@color/orange</item>
    </style>
</resources>
